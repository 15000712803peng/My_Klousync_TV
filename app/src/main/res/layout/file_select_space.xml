<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingLeft="22dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_select_team"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_promp"
                android:background="@drawable/dark_gray_shape"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="T"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/txt_team_name"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:textColor="@color/txt_color1"
                android:textSize="14sp"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_centerVertical="true" />
        </LinearLayout>


        <ImageView
            android:id="@+id/image_arrow"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/arrow2"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/layout_select_team"
            android:layout_width="14dp"
            android:layout_height="14dp" />

        <LinearLayout
            android:layout_toRightOf="@id/image_arrow"
            android:id="@+id/layout_select_space"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:background="@drawable/dark_gray_shape"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="S"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true" />

            <TextView

                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:textColor="@color/blue1"
                android:textSize="14sp"
                android:text="Select a space"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_centerVertical="true" />
        </LinearLayout>

        <ImageView
            android:layout_marginRight="10dp"
            android:id="@+id/img_close"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="12dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/close" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1.5px"
        android:background="@color/grey" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


</LinearLayout>



